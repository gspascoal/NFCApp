<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/labelLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fieldLatitude"
        android:layout_marginTop="18dp"
        android:text="Latitude" />

    <EditText
        android:id="@+id/fieldLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelLatitude"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter latitude"
        android:layout_margin="15dp"
         />
   
    <TextView
        android:id="@+id/labelLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fieldLongitude"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/fieldLatitude"
        android:text="Longitude" />

    <EditText
        android:id="@+id/fieldLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelLongitude"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter longitude"
        android:layout_margin="15dp"
         />
    
    
    
</RelativeLayout>
