<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" 
    android:padding="6dp">

	<CheckBox
	    android:id="@+id/checkContent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true" />

	<ImageView
	    android:id="@+id/contentIcon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/checkContent"
	    android:layout_toRightOf="@+id/checkContent"
	    android:background="@android:drawable/ic_menu_compass"
	    android:contentDescription="@string/cntnt_desc_tagicon" />

	<TextView
	    android:id="@+id/contentDescription"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/checkContent"
	    android:layout_alignBottom="@+id/checkContent"
	    android:layout_toRightOf="@+id/contentIcon"
	    android:gravity="center_vertical"
	    android:text="Kind"
	    android:textSize="16sp" />
	
	<TextView 
	    android:id="@+id/contentId"
	    android:layout_height="5dp"
	    android:layout_width="5dp"
	    android:visibility="invisible"
	    />

</RelativeLayout>