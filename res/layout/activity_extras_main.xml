<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.proyecto.ExtrasMain"
    android:layout_gravity="center"
     >

    <Button
        android:id="@+id/erase"
        style="@style/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/backupData"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/phone344"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Erase Tag" />

    <Button
        android:id="@+id/backupData"
        style="@style/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/erase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/default64"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Backup Data" />

    <Button
        android:id="@+id/restoreData"
        style="@style/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backupData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/default64"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Restore Data" />

</RelativeLayout>