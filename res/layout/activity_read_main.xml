<ScrollView 
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
    >    

    <RelativeLayout 
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyecto.ReadMain"
    android:background="#FFF"
    tools:ignore="MergeRootFrame"
     >

    <ImageView
        android:id="@+id/payloadTypeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/link"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/saveButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/content"
        android:drawableLeft="@drawable/save16"
        android:gravity="left|center_vertical"
        android:text="@string/saveButton" 
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/launchButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/saveButton"
        android:layout_alignBottom="@+id/saveButton"
        android:layout_toRightOf="@+id/payloadTypeIcon"
        android:background="@drawable/launch16"
        android:text="@string/launchButton" 
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/payloadTypeIcon"
        android:layout_alignLeft="@+id/type"
        android:text="Content"
        android:visibility="invisible"
         />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/launchButton"
        android:layout_alignTop="@+id/payloadTypeIcon"
        android:layout_marginRight="12dp"
        android:text="Type"
        android:visibility="invisible"
         />

</RelativeLayout>

</ScrollView>


