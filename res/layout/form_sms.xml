<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/labelReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fieldReceiver"
        android:layout_marginTop="18dp"
        android:text="Telephone number" />

    <EditText
        android:id="@+id/fieldReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelReceiver"
        android:layout_marginTop="18dp"
        android:layout_margin="15dp"
        android:ems="10"
        android:hint="Type destination number"
        android:inputType="phone" >

        <requestFocus />
    </EditText>
    
     <Button
        android:id="@+id/contactButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fieldReceiver"
        android:layout_alignBottom="@+id/fieldReceiver"
        android:text="C"
        android:onClick="onClick"
         />
    
    <TextView
        android:id="@+id/labelMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fieldMessage"
        android:layout_below="@+id/fieldReceiver"
        android:layout_marginTop="18dp"
        android:text="Message" />

    <EditText
        android:id="@+id/fieldMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelMessage"
        android:layout_marginTop="18dp"
        android:layout_margin="15dp"
        android:ems="10"
        android:hint="Type message"
        android:inputType="text" >

        <requestFocus />
    </EditText>
    
    

</RelativeLayout>
