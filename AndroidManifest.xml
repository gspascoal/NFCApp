<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyecto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.NFC" />
    <!--
     If the next instruction is omitted, anybody could download the app from the market 
     regardless that is not a NFC compatible device
    -->
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_v1"
        android:label="@string/app_name"
        android:logo="@drawable/app_icon_v1"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.proyecto.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.proyecto.ReadMain"
            android:label="@string/title_activity_read_main"
            android:parentActivityName="com.example.proyecto.MainActivity" >

            <!-- Parent activity meta-data o support and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.proyecto.MainActivity" />
            <!--
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:scheme="http"
                    android:host="*"
                    android:pathPrefix="" />
            </intent-filter>  
            -->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_list" />
        </activity>
        <activity
            android:name="com.example.proyecto.WriteMain"
            android:label="@string/title_activity_write_main"
            android:parentActivityName="com.example.proyecto.MainActivity" >

            <!-- Parent activity meta-data o support and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.proyecto.MainActivity" />

            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_list" />
        </activity>
        <activity
            android:name="com.example.proyecto.CreateTagContent"
            android:label="@string/title_activity_create_tag_content"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.proyecto.WriteMain" >

            <!-- Parent activity meta-data o support and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.proyecto.WriteMain" />
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_list" />
        </activity>
        <activity
            android:name="com.example.proyecto.TransferContent"
            android:label="@string/title_activity_transfer_content"
            android:parentActivityName="com.example.proyecto.CreateTagContent" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.proyecto.CreateTagContent" />
        </activity>
        <activity
            android:name="com.example.proyecto.TagsMain"
            android:label="@string/title_activity_tags_main"
            android:parentActivityName="com.example.proyecto.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.proyecto.MainActivity" />
        </activity>
    </application>

</manifest>